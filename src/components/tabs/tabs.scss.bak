.hydratedWidth {
  width: 100%;
}
.c-tabs-container {
  position: absolute;
  display: flex;
  width: 100%;
}
.c-tabs {
  position: relative;
  top: 0;
  right:0;
  left:0;
  flex: auto;
}
.c-tabs[role='tablist'] {
  box-sizing: border-box;
  display: block;
  width: 100%;
  overflow:visible;
  line-height: normal;
  background: $bp-color-border-lightest;
  &::before {
    display: block;
    content: "";
  }
}

.c-tabs__headings {
  display: inline-flex;
  font-family: sans-serif;
  text-align: center;
}
.c-tabs__nav {
  width: 100%;
  padding-top: 20px;
  padding-left: 20px;
  margin: -10px -20px 0 -20px;
  overflow: visible;
  background: $bp-color-background-light-layer0-base;
  .c-tabs__headings {
    padding-bottom: 1em;
    margin-bottom: -1em;
    overflow-x: visible;
    overflow-y: visible;
  }
  .c-tabs__headings:first-child {
    margin-left: 10px;
  }
}
.c-tab-heading[role='tab'] {
  display: block;
  flex: 1;
  width: auto;
  margin: 0;
  overflow: visible;
  font: inherit;
  line-height: normal;
  color: inherit;
  text-align: inherit;
  text-decoration: inherit;
  white-space: nowrap;
  vertical-align: inherit;
  background: $bp-color-background-light-layer0-base;
  border: 0;
  border-bottom: .25em solid transparent;
  border-radius: 0;
  outline: 0;
  appearance: none;
  &:disabled {
    cursor: not-allowed;
    opacity: .5;
  }
  &:not(:disabled) {
    &:not([disabled]) {
      &:active {
        background-color: transparent;
      }
      &:not(:active) {
        &:focus {
          background: $bp-color-core-neutral-17;
          border-top-color: $bp-color-core-neutral-17;
          border-right-color: $bp-color-core-neutral-17;
          border-bottom-color: $bp-color-core-blue-60;
          border-left-color: $bp-color-core-neutral-17;
          box-shadow: inset 0 0 0 2px $bp-color-core-blue-70;
        }
        &:hover {
          cursor: pointer;
          background-color: $bp-color-border-lightest;
        }
      }
    }
    &:not(.c-tab-heading--active) {
      &:hover {
        background-color: $bp-color-border-lightest;
        border-bottom-color: $bp-color-core-neutral-60;
      }
    }
  }
}
.c-tab-heading[role='tab'][disabled] {
  cursor: not-allowed;
  opacity: .5;
}
.c-tab-heading[role='tab'].c-tab-heading--active {
  border-bottom-color: $bp-color-core-neutral-60;
}
